<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Doodle Canvas -->
    <com.example.ciscx82doodler.DooleView
        android:id="@+id/drawingCanvas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!--Tool Panel with AbsoluteLayout inside it-->
    <LinearLayout
        android:id="@+id/toolPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#ECECEC"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Content in Tool Panel using AbsoluteLayout -->
        <android.widget.AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Brush Size -->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="26dp"
                android:layout_y="12dp"
                android:text="Brush Size" />

            <SeekBar
                android:id="@+id/seekBarSize"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_x="93dp"
                android:layout_y="12dp"
                android:max="100"
                android:progress="10" />

            <!-- Opacity SeekBar -->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="333dp"
                android:layout_y="11dp"
                android:text="Opacity" />

            <SeekBar
                android:id="@+id/seekBarOpacity"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_x="262dp"
                android:layout_y="11dp"
                android:max="255"
                android:progress="255" />

            <!-- Color Picker Button -->
            <Button
                android:id="@+id/colorPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="151dp"
                android:layout_y="47dp"
                android:background="#673AB7"
                android:text="Pick Color"
                android:textColor="@color/white" />

            <!-- Save Button -->
            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="298dp"
                android:layout_y="47dp"
                android:background="#673AB7"
                android:text="Save"
                android:textColor="@android:color/white" />

            <!-- Clear Button -->
            <Button
                android:id="@+id/clearButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="26dp"
                android:layout_y="47dp"
                android:background="#673AB7"
                android:text="Clear"
                android:textColor="@android:color/white" />

        </android.widget.AbsoluteLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
